     stage ("Test_report")

        {

            steps{
                bat 'python -m pytest --verbose --junit-xml reports/unit_tests.xml'
            }

            post{
                always{
                    junit allowEmptyResults: true, testResults: 'reports/unit_tests.xml'
                }
            }
    }
}
    post{
        always{
            echo "Hi Gaurav, Email from pipeline"
        }
        success{

            echo "pipeline execution passed "

